extends layout
block content
	
	.row.form-section
		form#DELETE_GROUP.form.col-md-4
			.form-group
				h3.crud_title DELETE GROUP
				if locals.user
					label groupId
					input#DELETE_groupId.form-control(type='text', name='groupId', required='')
					button.btn.btn-success(type='submit') Delete
					span#messageSuccessDELETE.messageSuccess
				else
					h4 You are not logged in! Please #[a(href="/login") Log In] to continue.
	script(type='text/javascript', src='js/DELETE_group.js', charset='utf-8')