extends layout
block content
	
	.row.form-section
		form#DELETE_USER.form.col-md-4
			.form-group
				h3.crud_title DELETE USER
				if locals.user
					label userId
					input#DELETE_userId.form-control(type='text', name='userId', required='')
					button.btn.btn-success(type='submit') Delete
					span#messageSuccessDELETE.messageSuccess
				else
					h4 You are not logged in! Please #[a(href="/login") Log In] to continue.
	script(type='text/javascript', src='js/DELETE_user.js', charset='utf-8')