extends layout
block content
  .row.form-section
    form#READ_AUTH.form.col-md-4
      .form-group
        h3.crud_title READ AUTHORIZATION
        if locals.user
          label authId
          input#READ_authId.form-control(type='text', name='authId')
          button#READ.btn.btn-success Search
          span#messageSuccessREAD.messageSuccess
        else
            h4 You are not logged in! Please #[a(href="/login") Log In] to continue.
  .row
    .col-md-10
      table#tableResult
        thead
          tr
            th Name
            th Description
            th Authorizations
  script(type='text/javascript', src='js/READ_auth.js', charset='utf-8')